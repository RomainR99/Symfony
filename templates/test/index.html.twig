{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    

    <h2>Ajouter un nouveau post avec une image</h2>
    {{ form_start(form) }}
        {{ form_row(form.image) }}
        <button class="btn">Envoyer</button>
    {{ form_end(form) }}

    <h2>Vos posts :</h2>
    {% for post in posts %}
        <div>
            <p><strong>Post créé le :</strong> {{ post.createdAt|date('Y-m-d H:i:s') }}</p>
            <p><strong>Votre image :</strong></p>
            <img src="{{ asset('uploads/images/' ~ post.imageFilename) }}" alt="Image de {{ post.id }}" width="200">
        </div>
    {% else %}
        <p>Aucun post trouvé.</p>
    {% endfor %}
</div>

{% endblock %}
